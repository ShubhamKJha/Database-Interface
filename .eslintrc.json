{
  "extends": [
    "eslint: recommended",
    "plugin: import/error",
    "plugin: react/recommended",
    "plugin: jsx-a11y/recommended",
    "prettier",
    "prettier/react"
  ],
  "rules": {
    "react/props-types": 0,
    "no-console": 1,
    "react-hooks/rules-of-hooks": "error"
  },
  "plugins": ["react", "import", "jsx-a11y", "react-hooks"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
